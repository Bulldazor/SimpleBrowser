<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent"
    tools:context="com.example.rr.simplebrowser.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!!"
        android:layout_marginLeft="110dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="72dp"
        app:layout_constraintHorizontal_bias="0.501"
        android:id="@+id/textView" />

            <EditText
                android:id="@+id/Url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter A URL"
                android:layout_marginTop="43dp"
                android:alpha="0.65"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/Go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Url"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@drawable/round_corner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Go" />

            <Button
                android:id="@+id/Fb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:textColor="@android:color/holo_blue_dark"
                android:paddingBottom="2dp"
                android:layout_marginLeft="20dp"
                android:padding="3dp"
                android:layout_below="@+id/Go"
                android:drawableTop="@drawable/facebook"
                android:layout_marginTop="46dp"
                android:text="Facebook" />

            <Button
                android:id="@+id/Goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Go"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/Go"
                android:text="Goal.com" />

            <Button
                android:id="@+id/Cricbz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Cricbuzz" />

            <Button
                android:id="@+id/Google"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingBottom="2dp"
                android:background="@android:color/white"
                android:textColor="@android:color/holo_blue_dark"
                android:padding="3dp"
                android:drawableTop="@drawable/search"
                android:text="Google"
                android:layout_alignBaseline="@+id/Fb"
                android:layout_alignBottom="@+id/Fb"
                android:layout_alignRight="@+id/Goal"
                android:layout_alignEnd="@+id/Goal" />


            <Button
                android:id="@+id/twiter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Twiter"
                android:paddingRight="20dp"
                android:paddingBottom="2dp"
                android:background="@android:color/white"
                android:textColor="@android:color/holo_blue_dark"
                android:padding="3dp"
                android:drawableTop="@drawable/twiter"
                android:layout_alignBaseline="@+id/Google"
                android:layout_alignBottom="@+id/Google"
                android:layout_alignRight="@+id/Cricbz"
                android:layout_alignEnd="@+id/Cricbz" />



        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
